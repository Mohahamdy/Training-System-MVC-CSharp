@model Course
@{
    SelectList deptList = new SelectList(ViewBag.Depts, "Id", "Name");
    ViewData["Title"] = "Add";
}

<h2>Add Course</h2>
<form asp-action="SaveAdd" asp-controller="Course" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="MinDegree"> Min Degree</label>
        <input asp-for="MinDegree" class="form form-control" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Dept_Id"></label>
        <select asp-for="Dept_Id" asp-items="deptList" class="form form-control">
            <option disabled hidden value="0" selected>Select Department</option>
        </select>
        <span asp-validation-for="Dept_Id" class="text-danger"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-success mt-2 mb-2" />
</form>
<a asp-action="Index" asp-controller="Course" class="btn btn-success mt-2 mb-2" > Back to Home</a>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
